<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.holiyay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Holiyay">
        <activity
            android:name=".BookingActivity"
            android:exported="true" />
        <activity
            android:name=".DetailPopularDestinationActivity"
            android:exported="true" />
        <activity
            android:name=".DestinationListActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.user.UserActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.forgotpassword.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.changepassword.ChangePasswordActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>